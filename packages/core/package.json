{
    "name": "@raazkhnl/rk-editor-core",
    "version": "3.2.1",
    "description": "Core engine for RK Word Editor built with Tiptap and ProseMirror",
    "author": {
        "name": "RaaZ Khanal",
        "email": "raazkhnl@gmail.com",
        "url": "https://github.com/raazkhnl"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
