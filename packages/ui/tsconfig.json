{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "@rk-editor/core": [
                "../core/dist/index.d.ts"
            ]
        }
    },
    "include": [
        "src"
    ]
}